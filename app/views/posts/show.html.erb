<% if next_post = @post.next_post %>
    <%= link_to "次へ", post_path(next_post), class: "next" %>
      <% end %>

<div class="two_column">
<table width="100%">
		<col width="20%">
		<col width="30%">
		<col width="20%">
		<col width="30%">
	<tbody>
		<tr>
			<th colspan="4">コール</th>
		</tr>
		<tr>
			<td colspan="3" class="call-font"><%= @post.tel%></td>
			<td>代表者：<%= @post.owner %></br>
				   担当者：<%= @post.owner %>
			</td>
		</tr>
		<tr>
			<th colspan ="4">
					<button id="button-call" data-number="<%= @post.tel %>">発信</button>
        			<button id="button-hangup" data-number="<%= @post.tel %>">保留</button>
        			<button id="button-hangup" data-number="<%= @post.tel %>">切断</button>
        	</th>
		</tr>
		<tr>
			<th colspan="4">情報入力</th>
			<%= form_for ([@post, @post.details.build]) do |f| %>
		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= f.select(:statu,[
						["着信のみ","着信のみ"],
			            ["オーナー不在","オーナー不在"],
			            ["再コール","再コール"],
			            ["見込み客","見込み客"],
			            ["APP","APP"],
			            ["フロントNG","フロントNG"],
			            ["クロージングNG","クロージングNG"],
			            ["従業員なしNG","従業員なしNG"],
			            ["入社年月日NG","入社年月日NG"],
			            ["永久NG","永久NG"],
			            ["社労士契約済","社労士契約済"],
			            ["助成金済","助成金済"]
			             ]) %></td>
			<th>再コール日時</th>
			<td><%= f.datetime_field :time %></td>
		</tr>
		<tr>
			<th>コメント</th>
			<td colspan ="4"><%= f.text_area :comment %></td>
		</tr>
		<tr>
			<th colspan ="4"><%=f.submit%></th>
		</tr>
	</tbody>
</table>
<%end%>
</div>


<table width="100%">
		<col width="15%">
		<col width="10%">
		<col width="15%">
		<col width="15%">
		<col width="25%">
		<col width="10%">
		<col width="10%">
<% if @post.details.any? %>
		<tr>
			<th>日時</th>
			<th>担当者</th>
			<th>ステータス</th>
			<th>次回連絡日</th>
			<th>コメント</th>
			<th>削除</th>
		</tr>
		<tr>
		<% @post.details.each do |detail| %>
			<td><%= detail.created_at %></td>
			<td></td>
			<td><%= detail.statu %></td>
			<td><%= detail.time %></td>
			<td><%= detail.comment %></td>
			<td></td>
		</tr>
<% end %>
</table>
<% end %>
</div>

