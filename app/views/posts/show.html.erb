  <div class="green-wrapper">



  <div class="heading">
    <h2>
      <% if prev_post = @post.prev_post %>
        <%= link_to "前へ", post_path(prev_post), class: "prev" %>
      <% end %>
      <label>Customer Detail</label>
      <% if next_post = @post.next_post %>
        <%= link_to "次へ", post_path(next_post), class: "next" %>
      <% end %>
    </h2>
  </div>



<table width="100%">
	<tbody>
		<tr>
			<th>会社名</th>
			<td><%= @post.company %></td>
			<th>代表者</th>
			<td><%= @post.owner %></td>
		</tr>
		<tr>
		    <th>電話番号</th>
			<td><%= link_to '発信', call_post_path(@post), method: :post %>｜
			       <%= link_to '切断', '/posts/:id', method: :post %>｜
			       <%= link_to '保留', '/posts/:id', method: :post %></td>
			<th>住所</th>
			<td colspan = "3"><%= @post.address %></td>
		</tr>
	</tbody>
</table>

